<Window x:Class="ArcRaidersOverlay.CalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Region Calibration"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        Cursor="Cross">

    <Grid>
        <!-- Screenshot background -->
        <Image x:Name="ScreenshotImage" Stretch="None"
               HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- Dark overlay -->
        <Rectangle x:Name="DarkOverlay" Fill="#66000000"/>

        <!-- Selection rectangle -->
        <Rectangle x:Name="SelectionRect"
                   Stroke="#00AAFF" StrokeThickness="2"
                   Fill="#3300AAFF"
                   Visibility="Collapsed"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>

        <!-- Instructions -->
        <Border Background="#CC000000" CornerRadius="5" Padding="15"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,50,0,0">
            <StackPanel>
                <TextBlock x:Name="InstructionText"
                           Text="Draw a rectangle to select the region"
                           Foreground="White" FontSize="16" FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Press ESC to cancel"
                           Foreground="#AAAAAA" FontSize="12"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Coordinates display -->
        <Border x:Name="CoordinatesPanel" Background="#CC000000" CornerRadius="3"
                Padding="8" HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10" Visibility="Collapsed">
            <TextBlock x:Name="CoordinatesText" Foreground="White" FontFamily="Consolas"/>
        </Border>
    </Grid>
</Window>
