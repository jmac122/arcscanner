<Window x:Class="ArcRaidersOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="ARC Raiders Overlay"
        Width="0" Height="0"
        WindowStyle="None"
        ShowInTaskbar="False"
        Visibility="Hidden">

    <Grid>
        <tb:TaskbarIcon x:Name="TrayIcon"
                        ToolTipText="ARC Raiders Overlay"
                        DoubleClickCommand="{Binding ToggleOverlayCommand}">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show/Hide Overlay" Click="ShowHide_Click"/>
                    <MenuItem Header="Unlock Overlay" Click="Unlock_Click"/>
                    <Separator/>
                    <MenuItem Header="Settings" Click="Settings_Click"/>
                    <MenuItem x:Name="ScanItemMenuItem" Header="Scan Item" IsEnabled="False"/>
                    <Separator/>
                    <MenuItem Header="About" Click="About_Click"/>
                    <MenuItem Header="Exit" Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
