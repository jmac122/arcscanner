<Window x:Class="ArcRaidersOverlay.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay Settings"
        Width="500" Height="800"
        MinWidth="450" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="#1a1a1a">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#666666"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Overlay Settings" FontSize="20" FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Events Region -->
        <GroupBox Grid.Row="1" Header="Events Region" Foreground="White"
                  BorderBrush="#555555" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="X:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox x:Name="EventsX" Grid.Column="1" Margin="0,0,10,5"/>
                <TextBlock Grid.Column="2" Text="Y:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox x:Name="EventsY" Grid.Column="3" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Text="Width:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox x:Name="EventsWidth" Grid.Row="1" Grid.Column="1" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Height:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox x:Name="EventsHeight" Grid.Row="1" Grid.Column="3" Margin="0,0,0,5"/>

                <Button Grid.Row="2" Grid.ColumnSpan="4" Content="Calibrate Events Region"
                        Click="CalibrateEvents_Click" Margin="0,10,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Item Scanner Settings -->
        <GroupBox Grid.Row="2" Header="Item Scanner" Foreground="White"
                  BorderBrush="#555555" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <!-- Cursor-based scanning toggle -->
                <CheckBox x:Name="UseCursorScanning" Content="Scan at cursor position (recommended)"
                          Checked="UseCursorScanning_Changed" Unchecked="UseCursorScanning_Changed"
                          Margin="0,0,0,5"/>
                <TextBlock Text="Captures the area around your mouse cursor when you press the hotkey"
                           Foreground="#888888" FontSize="10" Margin="20,0,0,10"/>

                <!-- Cursor-based scan region size -->
                <StackPanel x:Name="CursorScanPanel">
                    <TextBlock Text="Scan Region Size:" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Width:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="ScanRegionWidth" Grid.Column="1" Margin="0,0,15,0"/>
                        <TextBlock Grid.Column="2" Text="Height:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="ScanRegionHeight" Grid.Column="3"/>
                    </Grid>
                    <TextBlock Text="Larger = more text captured, but slower. Default: 500x300"
                               Foreground="#888888" FontSize="10" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Legacy fixed region (collapsed by default) -->
                <StackPanel x:Name="FixedRegionPanel" Visibility="Collapsed" Margin="0,10,0,0">
                    <TextBlock Text="Fixed Tooltip Region (Legacy):" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="X:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                        <TextBox x:Name="TooltipX" Grid.Column="1" Margin="0,0,10,5"/>
                        <TextBlock Grid.Column="2" Text="Y:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                        <TextBox x:Name="TooltipY" Grid.Column="3" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Text="Width:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                        <TextBox x:Name="TooltipWidth" Grid.Row="1" Grid.Column="1" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Height:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                        <TextBox x:Name="TooltipHeight" Grid.Row="1" Grid.Column="3" Margin="0,0,0,5"/>

                        <Button Grid.Row="2" Grid.ColumnSpan="4" Content="Calibrate Tooltip Region"
                                Click="CalibrateTooltip_Click" Margin="0,10,0,0"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Game Detection Settings -->
        <GroupBox Grid.Row="3" Header="Game Detection (Multi-Monitor Support)" Foreground="White"
                  BorderBrush="#555555" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <CheckBox x:Name="UseGameRelative" Content="Use game-relative coordinates (recommended)"
                          Margin="0,0,0,5"/>
                <TextBlock Text="Stores calibration relative to game window position"
                           Foreground="#888888" FontSize="10" Margin="20,0,0,10"/>

                <CheckBox x:Name="FollowGameWindow" Content="Overlay follows game window"
                          Margin="0,0,0,5"/>
                <TextBlock Text="Automatically positions overlay when game moves"
                           Foreground="#888888" FontSize="10" Margin="20,0,0,10"/>

                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Overlay offset: X=" VerticalAlignment="Center"/>
                    <TextBox x:Name="OverlayOffsetX" Grid.Column="1" Margin="5,0"/>
                    <TextBlock Grid.Column="2" Text="Y=" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBox x:Name="OverlayOffsetY" Grid.Column="3" Margin="5,0"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- General Settings -->
        <GroupBox Grid.Row="4" Header="General Settings" Foreground="White"
                  BorderBrush="#555555" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <CheckBox x:Name="StartWithWindows" Content="Start with Windows" Margin="0,0,0,10"/>
                <CheckBox x:Name="StartMinimized" Content="Start minimized to tray" Margin="0,0,0,10"/>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Event Poll Interval:" VerticalAlignment="Center"/>
                    <TextBox x:Name="PollInterval" Grid.Column="1" Margin="10,0" Width="60"
                             HorizontalAlignment="Left"/>
                    <TextBlock Grid.Column="2" Text="seconds" VerticalAlignment="Center"/>
                </Grid>

                <!-- Scan Hotkey -->
                <TextBlock Text="Item Scan Hotkey:" Margin="0,15,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="HotkeyCtrl" Content="Ctrl" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <CheckBox x:Name="HotkeyShift" Grid.Column="1" Content="Shift" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <CheckBox x:Name="HotkeyAlt" Grid.Column="2" Content="Alt" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="+" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="HotkeyKey" Grid.Column="4" Width="80" Background="#333333" Foreground="White"/>
                    <TextBlock Grid.Column="5" Text="" x:Name="HotkeyPreview" VerticalAlignment="Center" 
                               Margin="15,0,0,0" Foreground="#888888" FontStyle="Italic"/>
                </Grid>
                <TextBlock Text="Tip: Use Ctrl+Shift+S to avoid conflict with in-game sprint (Shift)"
                           Foreground="#888888" FontSize="10" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- OCR Settings -->
        <GroupBox Grid.Row="5" Header="OCR Settings" Foreground="White"
                  BorderBrush="#555555" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Tessdata Path:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="TessdataPath" Grid.Column="1" Margin="0,0,10,0"/>
                <Button Grid.Column="2" Content="Browse" Click="BrowseTessdata_Click"/>
            </Grid>
        </GroupBox>

        <!-- Instructions -->
        <Border Grid.Row="6" Background="#252525" CornerRadius="5" Padding="10" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Calibration Instructions:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock TextWrapping="Wrap" Foreground="#AAAAAA" FontSize="11">
                    1. Make sure ARC Raiders is running (the game window will be highlighted).
                    2. Click "Calibrate" to capture a screenshot of all your monitors.
                    3. Draw a rectangle around the region you want to capture.
                    4. Coordinates are saved relative to the game window for multi-monitor support.

                    Tip: For best OCR results, capture only the text area without decorations.
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Reset to Defaults" Click="ResetDefaults_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="Cancel_Click" Margin="0,0,10,0"/>
            <Button Content="Save" Click="Save_Click" Background="#007ACC"/>
        </StackPanel>
    </Grid>
    </ScrollViewer>
</Window>
