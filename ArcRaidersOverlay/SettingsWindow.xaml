<Window x:Class="ArcRaidersOverlay.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay Settings"
        Width="500" Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1a1a1a">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#666666"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Overlay Settings" FontSize="20" FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Events Region -->
        <GroupBox Grid.Row="1" Header="Events Region" Foreground="White"
                  BorderBrush="#555555" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="X:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox x:Name="EventsX" Grid.Column="1" Margin="0,0,10,5"/>
                <TextBlock Grid.Column="2" Text="Y:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox x:Name="EventsY" Grid.Column="3" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Text="Width:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox x:Name="EventsWidth" Grid.Row="1" Grid.Column="1" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Height:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox x:Name="EventsHeight" Grid.Row="1" Grid.Column="3" Margin="0,0,0,5"/>

                <Button Grid.Row="2" Grid.ColumnSpan="4" Content="Calibrate Events Region"
                        Click="CalibrateEvents_Click" Margin="0,10,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Tooltip Region -->
        <GroupBox Grid.Row="2" Header="Item Tooltip Region" Foreground="White"
                  BorderBrush="#555555" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="X:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox x:Name="TooltipX" Grid.Column="1" Margin="0,0,10,5"/>
                <TextBlock Grid.Column="2" Text="Y:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox x:Name="TooltipY" Grid.Column="3" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Text="Width:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox x:Name="TooltipWidth" Grid.Row="1" Grid.Column="1" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Height:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox x:Name="TooltipHeight" Grid.Row="1" Grid.Column="3" Margin="0,0,0,5"/>

                <Button Grid.Row="2" Grid.ColumnSpan="4" Content="Calibrate Tooltip Region"
                        Click="CalibrateTooltip_Click" Margin="0,10,0,0"/>
            </Grid>
        </GroupBox>

        <!-- General Settings -->
        <GroupBox Grid.Row="3" Header="General Settings" Foreground="White"
                  BorderBrush="#555555" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <CheckBox x:Name="StartWithWindows" Content="Start with Windows" Margin="0,0,0,10"/>
                <CheckBox x:Name="StartMinimized" Content="Start minimized to tray" Margin="0,0,0,10"/>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Event Poll Interval:" VerticalAlignment="Center"/>
                    <TextBox x:Name="PollInterval" Grid.Column="1" Margin="10,0" Width="60"
                             HorizontalAlignment="Left"/>
                    <TextBlock Grid.Column="2" Text="seconds" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- OCR Settings -->
        <GroupBox Grid.Row="4" Header="OCR Settings" Foreground="White"
                  BorderBrush="#555555" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Tessdata Path:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="TessdataPath" Grid.Column="1" Margin="0,0,10,0"/>
                <Button Grid.Column="2" Content="Browse" Click="BrowseTessdata_Click"/>
            </Grid>
        </GroupBox>

        <!-- Instructions -->
        <Border Grid.Row="5" Background="#252525" CornerRadius="5" Padding="10" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Calibration Instructions:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock TextWrapping="Wrap" Foreground="#AAAAAA" FontSize="11">
                    1. Click "Calibrate" to capture a screenshot of your game.
                    2. Draw a rectangle around the region you want to capture.
                    3. The coordinates will be automatically saved.

                    Tip: For best OCR results, capture only the text area without decorations.
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Reset to Defaults" Click="ResetDefaults_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="Cancel_Click" Margin="0,0,10,0"/>
            <Button Content="Save" Click="Save_Click" Background="#007ACC"/>
        </StackPanel>
    </Grid>
</Window>
